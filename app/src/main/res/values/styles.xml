<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/secondary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!-- Animations -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>

    <style name="AppThemeAlt" parent="AppTheme">
        <item name="colorPrimary">@color/secondary</item>
        <item name="colorPrimaryDark">@color/secondary</item>
        <item name="colorAccent">@color/primary</item>
    </style>

    <style name="layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:animateLayoutChanges">true</item>
    </style>

    <style name="layout_inner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/toolbar</item>
        <item name="android:paddingStart">@dimen/margin_default</item>
        <item name="android:paddingEnd">@dimen/margin_default</item>
    </style>

    <style name="bottom_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:paddingStart">@dimen/margin_default</item>
        <item name="android:paddingEnd">@dimen/margin_default</item>
    </style>

    <style name="app_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingStart">@dimen/margin_small</item>
        <item name="android:paddingEnd">@dimen/margin_small</item>
        <item name="android:popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="contentInsetStart">0dp</item>
    </style>

    <style name="toolbar_icon">
        <item name="android:layout_width">@dimen/toolbar_icon</item>
        <item name="android:layout_height">@dimen/toolbar_icon</item>
        <item name="android:padding">@dimen/toolbar_icon_padding</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="fab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
    </style>

    <style name="fab_left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|start</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
    </style>

    <style name="change_theme_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|start</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
    </style>


    <style name="card">
        <item name="cardCornerRadius">0dp</item>
        <item name="android:background">@color/background_card</item>
        <item name="cardElevation">@dimen/elevation_card</item>
        <item name="android:foreground">@drawable/list_item_background</item>
        <item name="android:clickable">true</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="card_field">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:saveEnabled">true</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="text_title" parent="text_bold">
        <item name="android:textColor">@color/text_alt</item>
        <item name="android:textStyle">bold</item>
        <item name="fontPath">fonts/Lato-Bold.ttf</item>
    </style>

    <style name="text_bold">
        <item name="android:textStyle">bold</item>
        <item name="fontPath">fonts/Lato-Bold.ttf</item>
    </style>

    <style name="text_block">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_alt</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="test">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|start</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
    </style>

    <style name="loader">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">@color/text_alt</item>
        <item name="android:contentDescription">@string/waiting</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:alpha">0.5</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>
</resources>
