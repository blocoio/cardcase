<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/margin_default"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="io.bloco.cardcase.presentation.home.SettingsActivity"
    style="@style/toolbar">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <TextView
        android:id="@+id/settingsToolbarText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/toolbar_icon"
        android:layout_marginStart="@dimen/toolbar_icon"
        android:layout_marginTop="@dimen/margin_tiny"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/theme_settings"
        android:textAllCaps="true"
        android:textColor="@color/text_alt"
        android:textStyle="bold"
        fontPath="fonts/Lato-Bold.ttf"
        tools:ignore="MissingPrefix"/>
  </RelativeLayout>


  <TextView
      android:id="@+id/textView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_above="@+id/spinner"
      android:layout_centerHorizontal="true"
      android:layout_centerInParent="false"
      android:paddingBottom="20dp"
      android:text="Choose your theme:"
      android:textColor="@color/text_alt"
      android:textSize="18sp"/>

  <Spinner
      android:id="@+id/spinner"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_centerVertical="true"
      android:background="#FFFFFF">
  </Spinner>

  <Button
      android:id="@+id/save_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/spinner"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="51dp"
      android:onClick="saveButtonClicked"
      android:text="Save"/>

  <ImageView
      android:id="@+id/imageView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/toolbar_settings_close"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="83dp"
      android:scaleType="center"
      app:srcCompat="@drawable/ic_avatar"/>

  <ImageButton
      android:id="@+id/toolbar_settings_close"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:contentDescription="@string/close"
      android:onClick="onClickedBack"
      android:src="@drawable/ic_back_left"
      style="@style/toolbar_icon"/>


</RelativeLayout>
